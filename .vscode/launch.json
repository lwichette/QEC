    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Optim old",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/old_stuff/optimized/cuIsing"
        },

        {
            "name": "Optim new",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/optim/cuIsing",
            "args": "--X 512 --Y 512 --XSL 128 --YSL 128 --prob 0.1 --nie 100 --nw 100 --nit 100 --temp 1 --step 0.03 --ndev 1 --up 1 --out"
        },
        
        {
            "name": "CUDA C++: Attach",
            "type": "cuda-gdb",
            "request": "attach"
        },

        {
            "name": "CUDA C++: dev_open_boundary",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/dev_open_boundary/dev_open_boundary",
            "args": "--p 0.101 --temp 0.8 --step 0.05 --up true --nie 1 --nit 10 --nw 10 --nl 2 --nrt 1 --L 8 --folder test_folder"
        },
    ]
}