    "version": "0.2.0",
    "configurations": [

        {
            "name": "Optim old",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/old_stuff/optimized/cuIsing"
        },

        {
            "name": "Optim new",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/optim/cuIsing",
            "args": "--X 128 --Y 128 --XSL 128 --YSL 128 --prob 0.1 --nie 1 --nw 1 --nit 1 --temp 1 --step 0.1 --ndev 1 --up 1"
        },

        {
            "name": "test_rng",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/test_rng/test_rng",
        },

        {
            "name": "CUDA C++: Attach",
            "type": "cuda-gdb",
            "request": "attach"
        },

        {
            "name": "CUDA C++: dev_basic_cuda",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/dev_basic_cuda/dev_basic_cuda",
            "args": "--p 0.06 --open false --temp 0.8 --step 0.05 --up true --nie 1 --leave_out 2 --nit 10 --nw 10 --nl 1 --nrt 1 --L 8 --folder test_folder --write_lattice false --read_lattice false"
        },

        {
            "name": "Comparison optimized",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/Comparison/optimized/cuIsing",
            "args": "--x 128 --y 128 --t 1.7 --J 0.5 --seed 44 --nit 2"
        }
    ]
}